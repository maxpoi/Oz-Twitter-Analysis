version: "3"
services:
  # because we are not runnig on a single node,
  # so no master/slave nodes.
  couchdb:
    image: "ibmcom/couchdb3:3.0.0"
    restart: always
    ports:
      - "5984:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - ./data/couch:/opt/couchdb/data
    environment:
      - COUCHDB_USER={{ couch.user }}
      - COUCHDB_PASSWORD={{ couch.pwd }}
      - NODENAME=couchdb@{{ ansible_host }}
    container_name: couchdb
    networks:
      - couchdb_nw

networks:
  couchdb_nw: